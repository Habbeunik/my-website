---
// This page will be server-side rendered due to SSR configuration
export const prerender = false;

import Layout from '../layouts/Layout.astro';
import About from '../components/Abouts.jsx';
import Experience from '../components/Experiences.jsx';
import Projects from '../components/Projects.jsx';
import Blog from '../components/Blog.jsx';
import Fun from '../components/Fun.jsx';
import Header from '../components/Header.jsx';
import Socials from '../components/Socials.jsx';
import CustomCursor from '../components/CustomCursor.jsx';
---

<Layout
	title="Abbey Kumapayi - Senior Frontend Developer & Product Engineer | Portfolio">
	<CustomCursor client:load />
	<main
		class="min-h-screen relative flex flex-col max-w-7xl mx-auto">
		<!-- Enhanced Header Section -->
		<div
			class="grid grid-cols-[40px_1fr_40px] md:grid-cols-[40px_1fr_40px] mobile-grid h-[70px] md:h-[80px] bg-background/80 backdrop-blur-xl z-10 sticky top-0 border-b border-border/50">
			<div
				class="border-b border-r border-muted-foreground/20 h-full desktop-only">
			</div>
			<div
				class="border-b border-r border-muted-foreground/20 h-full">
				<Header client:load />
			</div>
			<div
				class="border-b border-muted-foreground/20 h-full desktop-only">
			</div>
		</div>

		<!-- Mobile Socials Section -->
		<!-- <div class="mobile-only p-4 border-b border-border">
			<div class="flex justify-center">
				<Socials />
			</div>
		</div> -->

		<!-- Enhanced About Section -->
		<div
			class="grid grid-cols-[40px_1fr_40px] md:grid-cols-[40px_1fr_40px] mobile-grid">
			<div
				class="border-b border-r border-muted-foreground/20 h-full desktop-only">
			</div>
			<div
				class="border-b border-r border-muted-foreground/20 h-full">
				<section
					id="about"
					class="animate-fade-in-up animate-delay-100">
					<About />
				</section>
			</div>
			<div
				class="border-b border-muted-foreground/20 h-full relative desktop-only">
			</div>
		</div>
		<!-- Enhanced Experience Section -->
		<div
			class="grid grid-cols-[40px_1fr_40px] md:grid-cols-[40px_1fr_40px] mobile-grid">
			<div
				class="border-r border-muted-foreground/20 h-full desktop-only">
			</div>
			<div
				class="border-r border-muted-foreground/20 h-full">
				<section
					id="experience"
					class="animate-fade-in-up animate-delay-200 mobile-section">
					<Experience />
				</section>
			</div>
			<div
				class="border-muted-foreground/20 h-full desktop-only">
			</div>
		</div>

		<!-- Enhanced Projects Section -->
		<div
			class="grid grid-cols-[40px_1fr_40px] md:grid-cols-[40px_1fr_40px] mobile-grid flex-1">
			<div
				class="border-r border-muted-foreground/20 h-full desktop-only">
			</div>
			<div
				class="border-r border-muted-foreground/20 h-full pt-4 md:pt-10">
				<section
					id="projects"
					class="animate-fade-in-up animate-delay-300 mobile-section">
					<Projects />
				</section>
			</div>
			<div
				class="border-muted-foreground/20 h-full desktop-only">
			</div>
		</div>

		<!-- Enhanced Blog Section -->
		<div
			class="grid grid-cols-[40px_1fr_40px] md:grid-cols-[40px_1fr_40px] mobile-grid">
			<div
				class="border-r border-muted-foreground/20 desktop-only">
			</div>
			<div
				class="border-r border-muted-foreground/20 h-full pt-4 md:pt-10">
				<section
					id="blog"
					class="animate-fade-in-up animate-delay-400 mobile-section">
					<Blog />
				</section>
			</div>
			<div
				class="border-muted-foreground/20 h-full desktop-only">
			</div>
		</div>

		<!-- Enhanced Contact Section -->
		<div
			class="grid grid-cols-[40px_1fr_40px] md:grid-cols-[40px_1fr_40px] mobile-grid flex-1">
			<div
				class="border-r border-muted-foreground/20 h-full desktop-only">
			</div>
			<div
				class="border-r border-muted-foreground/20 h-full pt-4 md:pt-10">
				<section
					id="chat-with-me"
					class="animate-fade-in-up animate-delay-500 mobile-section">
					<Fun client:load />
				</section>
			</div>
			<div
				class="border-muted-foreground/20 h-full relative desktop-only">
				<div
					class="h-full absolute top-0 right-0 bottom-0 w-[80px] animate-fade-in-left animate-delay-200">
					<Socials />
				</div>
			</div>
		</div>

		<!-- Enhanced Mobile Socials Section -->
		<div
			class="mobile-only p-6 border-b border-muted-foreground/20">
			<div class="flex justify-center">
				<Socials />
			</div>
		</div>

		<!-- Enhanced Footer Section -->
		<div
			class="grid grid-cols-[40px_1fr_40px] md:grid-cols-[40px_1fr_40px] mobile-grid h-[120px]">
			<div
				class="border-r border-t border-muted-foreground/20 h-full desktop-only">
			</div>
			<div
				class="border-t border-r border-muted-foreground/20 h-full">
				<footer class="px-4 md:px-12 py-8">
					<div
						class="flex flex-col sm:flex-row items-center justify-between gap-4">
						<p class="text-sm text-muted-foreground">
							Â© 2025 Abbey Kumapayi
						</p>
					</div>
				</footer>
			</div>
			<div
				class="border-t border-muted-foreground/20 h-full desktop-only">
			</div>
		</div>
	</main>
</Layout>
